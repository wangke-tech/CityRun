<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="10dip"
	android:background="@color/main_bg">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="照片描述"
		android:textSize="16sp" android:textColor="#333333" />
	<LinearLayout android:gravity="center_vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal">
		<EditText android:id="@+id/renren_demo_photo_caption"
			android:layout_width="220dip" android:layout_height="wrap_content"
			android:singleLine="true" android:padding="5dip" android:maxLength="140"
			android:background="@drawable/renren_edit_text_bg" />
		<Button android:id="@+id/renren_demo_photo_upload_button"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="上传" android:textSize="16sp" android:textColor="#000000"
			android:layout_marginLeft="20dip" />
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="180dip" android:layout_marginTop="10dip"
		android:layout_marginBottom="10dip" android:gravity="center"
		android:padding="5dip" android:background="@drawable/renren_edit_text_bg">
		<ImageView android:id="@+id/renren_demo_photo_image"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical">
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="返回结果"
			android:textColor="#333333" android:textSize="16sp" />
		<EditText android:id="@+id/renren_demo_photo_upload_result"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:minLines="5" android:padding="5dip" android:textColor="#000000"
			android:textSize="12sp" android:gravity="top" android:editable="false"
			android:scrollbars="vertical" android:background="@drawable/renren_edit_text_bg" />
	</LinearLayout>
</LinearLayout>